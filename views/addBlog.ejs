<html lang="en"></html>
<head>
    <%- include('partials/head') %>
    <title>Add Blog</title>
</head>
<body>
    <%- include('partials/nav') %>
    <div class="container mt-4">
        <form action="/blog/" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" aria-describedby="title">
            </div>

            <div class="mb-3">
                <label for="title" class="title">Content</label>
                <textarea type="text" class="form-control" id="body" name="body" aria-describedby="body" style="height: 100px"></textarea>
            </div>

            <div class="mb-3">
                <label for="title" class="title">Cover Image</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
            </div>
            
            <button type="submit" class="btn btn-primary">Add Blog</button>
          </form>
        </div>
    
    <%- include('partials/scripts') %>
</body>
</html>