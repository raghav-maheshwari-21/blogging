<html lang="en"></html>
<head>
    <%- include('partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('partials/nav') %>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px">
        <%= blog.createdBy.fullName %> (Author)
    </div>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="400px" height="400px">
        <pre class="mt-4"><%= blog.body %></pre>   
    </div>

    <div class="container mt-4">
        <h3>Comments (<%= comments.length %>)</h3>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                  <input type="text" class="form-control" name="content" id="email" placeholder="Add your comment!">
                </div>
                <button type="submit" class="btn btn-sm btn-primary">Add Comment</button>
            </form>
        <% } %>
        <div class="container mt-3">
            <% comments.forEach(comment => { %>
             <img src="<%= comment.createdBy.profileImageURL %>" width="40px"> <%= comment.createdBy.fullName %>
             <pre><%= comment.content %></pre>
            <% }) %>
        </div>
    </div>
    <%- include('partials/scripts') %>
</body>
</html>